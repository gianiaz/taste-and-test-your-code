{% extends "layout.html.twig" %}

{% block main %}
<div class="container-fluid mt-5">
    <h2>Ingredients Category</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Modifica</th>
                    <th>Elimina</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td> <a href="{{ path('ingredients-category-edit', {category: category.id}) }}" class="btn btn-primary">Modifica </a></td>
                    <td> <a href="{{ path('ingredients-category-delete', {category: category.id}) }}" class="btn btn-danger">Cancella</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <a href="{{ path("ingredients-category-new") }}" class="btn btn-success">Nuovo</a>
</div>

{% endblock %}
